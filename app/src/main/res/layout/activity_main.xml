<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/LightTheme"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:paddingLeft="65dp"
        android:paddingTop="120dp"
        android:text="Hello, world!"
        android:textColor="@color/black"
        android:textSize="@dimen/big_text_size" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_linaer_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/digit_button_one"
            style="@style/ButtonLightTheme"
            android:layout_width="@dimen/default_size_button"
            android:layout_height="@dimen/default_size_button"
            android:layout_margin="@dimen/default_margin"
            android:text="1"
            android:textSize="@dimen/default_text_size" />

        <Button
            android:id="@+id/digit_button_two"
            style="@style/ButtonLightTheme"
            android:layout_width="@dimen/default_size_button"
            android:layout_height="@dimen/default_size_button"
            android:layout_margin="@dimen/default_margin"
            android:text="2"
            android:textSize="@dimen/default_text_size" />

        <Button
            android:id="@+id/digit_button_three"
            style="@style/ButtonLightTheme"
            android:layout_width="@dimen/default_size_button"
            android:layout_height="@dimen/default_size_button"
            android:layout_margin="@dimen/default_margin"
            android:text="3"
            android:textSize="@dimen/default_text_size" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_linaer_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/digit_button_four"
            style="@style/ButtonLightTheme"
            android:layout_width="@dimen/default_size_button"
            android:layout_height="@dimen/default_size_button"
            android:layout_margin="@dimen/default_margin"
            android:text="4"
            android:textSize="@dimen/default_text_size" />

        <Button
            android:id="@+id/digit_button_five"
            style="@style/ButtonLightTheme"
            android:layout_width="@dimen/default_size_button"
            android:layout_height="@dimen/default_size_button"
            android:layout_margin="@dimen/default_margin"
            android:text="5"
            android:textSize="@dimen/default_text_size" />

        <Button
            android:id="@+id/digit_button_six"
            style="@style/ButtonLightTheme"
            android:layout_width="@dimen/default_size_button"
            android:layout_height="@dimen/default_size_button"
            android:layout_margin="@dimen/default_margin"
            android:text="6"
            android:textSize="@dimen/default_text_size" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/left_linaer_margin"
        android:orientation="horizontal">

        <Button
            android:id="@+id/digit_button_seven"
            style="@style/ButtonLightTheme"
            android:layout_width="@dimen/default_size_button"
            android:layout_height="@dimen/default_size_button"
            android:layout_margin="@dimen/default_margin"
            android:text="7"
            android:textSize="@dimen/default_text_size" />

        <Button
            android:id="@+id/digit_button_eight"
            style="@style/ButtonLightTheme"
            android:layout_width="@dimen/default_size_button"
            android:layout_height="@dimen/default_size_button"
            android:layout_margin="@dimen/default_margin"
            android:text="8"
            android:textSize="@dimen/default_text_size" />

        <Button
            android:id="@+id/digit_button_nine"
            style="@style/ButtonLightTheme"
            android:layout_width="@dimen/default_size_button"
            android:layout_height="@dimen/default_size_button"
            android:layout_margin="@dimen/default_margin"
            android:text="9"
            android:textSize="@dimen/default_text_size" />


    </LinearLayout>


</LinearLayout>